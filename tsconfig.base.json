{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cocktail-menu-builder/adapters/controllers": [
        "libs/adapters/controllers/src/index.ts"
      ],
      "@cocktail-menu-builder/adapters/gateways": [
        "libs/adapters/gateways/src/index.ts"
      ],
      "@cocktail-menu-builder/application/repositories": [
        "libs/application/repositories/src/index.ts"
      ],
      "@cocktail-menu-builder/application/use-cases": [
        "libs/application/use-cases/src/index.ts"
      ],
      "@cocktail-menu-builder/apps/cocktail-menu-builder-api/req-types": [
        "libs/apps/cocktail-menu-builder-api/req-types/src/index.ts"
      ],
      "@cocktail-menu-builder/domain/entities": [
        "libs/domain/entities/src/index.ts"
      ],
      "@cocktail-menu-builder/helpers/assertions": [
        "libs/helpers/assertions/src/index.ts"
      ],
      "@cocktail-menu-builder/helpers/error-handlers": [
        "libs/helpers/error-handlers/src/index.ts"
      ],
      "@cocktail-menu-builder/helpers/lambda": [
        "libs/helpers/lambda/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
